{
  "functions": {
    "app.py": {
      "runtime": "python3.11" 
    }
  },
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python" 
    }
  ],

  "installCommand": "pip install --upgrade pip setuptools && pip install -r requirements.txt",
  
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ]
}